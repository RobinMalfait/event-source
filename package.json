{
  "version": "0.0.2",
  "name": "@robinmalfait/event-source",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "email": "malfait.robin@gmail.com",
    "name": "Robin Malfait"
  },
  "main": "dist/index.js",
  "module": "dist/eventsource.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "scripts": {
    "start": "pnpm build --watch",
    "build": "tsup ./src/index.ts --format esm --clean --minify --dts",
    "test": "jest",
    "tdd": "jest --watchAll",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "jest": {
    "transform": {
      "\\.ts$": "@swc/jest"
    },
    "moduleNameMapper": {
      "^~/(.*)": "<rootDir>/src/$1",
      "^@robinmalfait/event-source": "<rootDir>/src/index.ts"
    }
  },
  "devDependencies": {
    "@swc/core": "^1.3.58",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.4",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "yamlify-object": "^1.0.0"
  }
}
